{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "outDir": "../bin/showcase",
        "rootDir": "../src",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true, 

        "strict": true ,
        "noUnusedLocals": true ,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "lib": ["es2017", "dom"],
        "typeRoots": ["src/types"]
    },
    "include": ["../src/**/*.ts"],
    "compileOnSave": false
}
