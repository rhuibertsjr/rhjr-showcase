{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "outDir": "../bin/showcase",
        "rootDir": "../src",
        "moduleResolution": "node",
        "baseUrl": "../src/",
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true, 

        "strict": true ,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true ,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "lib": ["es2017", "dom"],
        "typeRoots": ["src/types"],
        "paths": {
            "@components/*": [
                "components/*"
            ]
        }
    },
    "include": ["../src/**/*.ts"],
    "compileOnSave": false
}
